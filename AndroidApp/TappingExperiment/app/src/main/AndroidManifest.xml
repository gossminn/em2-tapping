<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visualstudio.gossminn.simpleapp01">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TappingActivity"
            android:label="@string/title_activity_trial"/>
        <activity
            android:name=".TrialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InstructionsActivity"
            android:label="@string/title_instructions" />
        <activity
            android:name=".PracticeActivity"
            android:label="@string/title_practice"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PracticeTrialActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>